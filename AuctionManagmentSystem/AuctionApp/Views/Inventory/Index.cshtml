@model IEnumerable<Inventory>

<h1>All Products</h1>

<a asp-action="Create" class="btn btn-primary">New Product</a>

<table class="table table-striped">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor( model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor( model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor( model => model.AddedOn)
            </th>
            <th>
                @Html.DisplayNameFor( model => model.DecadeMade)
            </th>
            <th>
                @Html.DisplayNameFor( model => model.InventoryName)
            </th>
            <th>
                @Html.DisplayNameFor( model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor( model => model.Cost)
            </th>
            <th>
                @Html.DisplayNameFor( model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor( model => model.Category.CategoryName)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var inventory in Model)
       {
           <tr>
               <td>
                    @Html.DisplayFor( model => inventory.Image)
               </td>
               <td>
                    @Html.DisplayFor( model => inventory.Id)
               </td>
               <td>
                    @Html.DisplayFor( model => inventory.AddedOn)
               </td>
               <td>
                    @Html.DisplayFor( model => inventory.DecadeMade)
               </td>
               <td>
                    @Html.DisplayFor( model => inventory.InventoryName)
               </td>
               <td>
                    @Html.DisplayFor( model => inventory.Description)
               </td>
               <td>
                    @Html.DisplayFor( model => inventory.Cost)
               </td>
               <td>
                    @Html.DisplayFor( model => inventory.Price)
               </td>
               <td>
                    @Html.DisplayFor( model => inventory.Category.CategoryName)
               </td>
               <td>
                   @Html.ActionLink("Edit", "Edit", new {id = inventory.Id})
                   @Html.ActionLink("Delete", "Delete", new {id = inventory.Id},new {onclick = "return confirm('Are you sure you want to delete this product?');"})
               </td>
           </tr>
       }
    </tbody>
</table>